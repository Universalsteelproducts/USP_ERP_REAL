    </request-map>
    <request-map uri="createEmployee">
        <security https="true" auth="true"/>
        <event type="service" path="" invoke="createEmployeeGroup"/>
        <response name="success" type="request-redirect" value="employeeManagement"/>
        <response name="error" type="view" value="createEmployeeDetailForm"/>
    </request-map>
    <request-map uri="updateEmployeeDetailForm">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="updateEmployeeDetailForm"/>
