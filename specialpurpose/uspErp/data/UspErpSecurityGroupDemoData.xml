    <!-- STEP 6 : create Person -->
    <Person                         partyId="uspErpAdmin"       firstName="USP"  lastName="ERPAdmin"/>
    <Person                         partyId="uspErpManager"     firstName="USP"  lastName="ERPManager"/>
    <Person                         partyId="purchaseManager"   firstName="USP"  lastName="PurchaseManager"/>
