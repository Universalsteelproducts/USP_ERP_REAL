    <PartyRole                      partyId="accountManager"    roleTypeId="_NA_"/>
    <PartyRole                      partyId="accountManager"    roleTypeId="EMPLOYEE"/>
    <PartyRole                      partyId="accountManager"    roleTypeId="MANAGER"/>
    <PartyRole                      partyId="salesManager"      roleTypeId="_NA_"/>
    <PartyRole                      partyId="salesManager"      roleTypeId="EMPLOYEE"/>
    <PartyRole                      partyId="salesManager"      roleTypeId="MANAGER"/>
    <PartyRole                      partyId="hrManager"         roleTypeId="_NA_"/>
