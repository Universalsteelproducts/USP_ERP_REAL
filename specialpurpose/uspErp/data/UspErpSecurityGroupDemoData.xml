<entity-engine-xml>

    <!-- USP ERP -->
    <!-- Security Group and Permission base Data -->
    <!-- STEP 1 : SECURITY GROUP IN EACH DEPARTMENT -->
    <SecurityGroup                  groupId="USPERP"                    description="USP ERP SYSTEM ADMIN" />
    <SecurityGroup                  groupId="ERP_MANAGER"               description="USP ERP MANAGER" />

    <!-- STEP 2 : BIND SECURITY GROUP AND SECURITY PERMISSION -->
    <SecurityGroupPermission        groupId="USPERP"                    permissionId="USPERP_VIEW"/>
    <SecurityGroupPermission        groupId="USPERP"                    permissionId="ERP_MANAGER_VIEW"/>
    <SecurityGroupPermission        groupId="ERP_MANAGER"               permissionId="USPERP_VIEW"/>
    <SecurityGroupPermission        groupId="ERP_MANAGER"               permissionId="ERP_MANAGER_VIEW"/>

    <SecurityGroupPermission        groupId="FULLADMIN"                 permissionId="USPERP_VIEW"/>
    <SecurityGroupPermission        groupId="FLEXADMIN"                 permissionId="USPERP_VIEW"/>
    <SecurityGroupPermission        groupId="VIEWADMIN"                 permissionId="USPERP_VIEW"/>
    <SecurityGroupPermission        groupId="BIZADMIN"                  permissionId="USPERP_VIEW"/>

    <!-- STEP 3 : SET ACTION OF EACH SECURITY PERMISSION -->
    <!-- 특수한 권한의 경우 추가 -->
    <SecurityPermission             permissionId="USPERP_VIEW"          description="USP ERP SYSTEM ADMIN VIEW PERMISSION"/>
    <SecurityPermission             permissionId="ERP_MANAGER_VIEW"     description="USP ERP SYSTEM ERP MANAGER VIEW PERMISSION"/>

    <!-- party base Dat : create above Manager Permission -->
