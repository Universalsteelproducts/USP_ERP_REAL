    <Person                         partyId="hrManager"         firstName="USP"  lastName="HRManager"/>
    <Person                         partyId="inventoryManager"  firstName="USP"  lastName="InventoryManager"/>

    <!-- STEP 7 : create User Login -->
    <UserLogin                      userLoginId="uspErpAdmin"       currentPassword="{SHA}47ca69ebb4bdc9ae0adec130880165d2cc05db1a"     requirePasswordChange="N"   partyId="uspErpAdmin"/>
