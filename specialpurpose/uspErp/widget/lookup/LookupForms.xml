<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://ofbiz.apache.org/Widget-Form" xsi:schemaLocation="http://ofbiz.apache.org/Widget-Form http://ofbiz.apache.org/dtds/widget-form.xsd">

    <form name="LookupSupplier" target="LookupSupplier" title="Supplier" type="single"
          header-row-style="header-row" default-table-style="basic-table">
        <field position="1" name="supplierId"><text/></field>
        <field position="2" name="supplierNm"><text/></field>

        <field name="noConditionFind"><hidden value="Y"/><!-- if this isn't there then with all fields empty no query will be done --></field>
        <field name="submitButton" title="${uiLabelMap.CommonFind}" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>

    <form name="ListSupplier" list-name="listIt" title="Supplier" type="list" paginate-target="LookupSupplier"
          odd-row-style="alternate-row" default-table-style="basic-table hover-bar">
        <actions>
            <service service-name="performFind" result-map="result" result-map-list="listIt">
                <field-map field-name="inputFields" from-field="parameters"/>
                <field-map field-name="entityName" value="Vendor"/>
                <field-map field-name="viewIndex" from-field="viewIndex"/>
                <field-map field-name="viewSize" from-field="viewSize"/>
            </service>
        </actions>
        <field name="vendorId" title="${uiLabelMap.supplierId}" widget-style="buttontext">
            <hyperlink description="${vendorId}" target="javascript:set_value('${vendorId}')" also-hidden="false" target-type="plain"/>
        </field>
        <field name="vendorNm" title="${uiLabelMap.supplierNm}"><display/></field>
        <field name="vendorInitials" title="${uiLabelMap.ssupplierInitials}"><display/></field>
    </form>

    <form name="LookupCustomer" target="LookupCustomer" title="Customer" type="single"
          header-row-style="header-row" default-table-style="basic-table">
        <field position="1" name="customerId"><text/></field>
        <field position="2" name="customerNm"><text/></field>

        <field name="noConditionFind"><hidden value="Y"/><!-- if this isn't there then with all fields empty no query will be done --></field>
        <field name="submitButton" title="${uiLabelMap.CommonFind}" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>

    <form name="ListCustomer" list-name="listIt" title="Customer" type="list" paginate-target="LookupCustomer"
          odd-row-style="alternate-row" default-table-style="basic-table hover-bar">
        <actions>
            <service service-name="performFind" result-map="result" result-map-list="listIt">
                <field-map field-name="inputFields" from-field="parameters"/>
                <field-map field-name="entityName" value="Customer"/>
                <field-map field-name="viewIndex" from-field="viewIndex"/>
                <field-map field-name="viewSize" from-field="viewSize"/>
            </service>
        </actions>
        <field name="customerId" widget-style="buttontext">
            <hyperlink description="${customerId}" target="javascript:set_customer('${customerId}', '${customerNm}')" also-hidden="false" target-type="plain"/>
        </field>
        <field name="customerName" title="${uiLabelMap.CustomerName}"><display/></field>
    </form>

    <form name="LookupPaint" target="LookupPaint" title="Paint Code" type="single"
          header-row-style="header-row" default-table-style="basic-table">
        <field position="1" name="paintCode"><text/></field>

        <field name="noConditionFind"><hidden value="Y"/><!-- if this isn't there then with all fields empty no query will be done --></field>
        <field name="submitButton" title="${uiLabelMap.CommonFind}" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>

    <form name="ListPaint" list-name="listIt" title="Paint Code" type="list" paginate-target="LookupPaint"
          odd-row-style="alternate-row" default-table-style="basic-table hover-bar">
        <actions>
            <service service-name="performFind" result-map="result" result-map-list="listIt">
                <field-map field-name="inputFields" from-field="parameters"/>
                <field-map field-name="entityName" value="PaintCode"/>
                <field-map field-name="viewIndex" from-field="viewIndex"/>
                <field-map field-name="viewSize" from-field="viewSize"/>
            </service>
        </actions>
        <field name="paintCode" widget-style="buttontext">
            <hyperlink description="${paintCode}" target="javascript:set_value('${paintCode}')" also-hidden="false" target-type="plain"/>
        </field>
        <field name="paintName" title="${uiLabelMap.paintName}"><display/></field>
        <field name="paintBrand" title="${uiLabelMap.paintBrand}"><display/></field>
        <field name="paintType" title="${uiLabelMap.paintType}"><display/></field>
    </form>

    <form name="LookupSecurityGroup" target="LookupSecurityGroup" title="${uiLabelMap.securityGroup}" type="single"
          header-row-style="header-row" default-table-style="basic-table">
        <field name="groupId" title="${uiLabelMap.groupId}"><text/></field>
        <field name="" widget-style="buttontext">
            <hyperlink description="${uiLabelMap.CommonFind}" also-hidden="false" target-type="plain"/>
        </field>
    </form>
</forms>
