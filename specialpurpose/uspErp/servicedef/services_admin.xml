<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>UspErp Admin Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="searchEmployee" default-entity-name="UserLogin" engine="java" auth="true"
             location="services.AdminServices" invoke="searchEmployee">
        <attribute name="productStoreId" mode="IN" type="String" optional="true"/>
        <attribute name="srchEmployeeId" mode="IN" type="String" optional="true"/>
        <attribute name="searchGroupId" mode="IN" type="String" optional="true"/>
        <attribute name="data" mode="OUT" type="java.util.List" optional="true"/>
        <attribute name="recordsTotal" mode="OUT" type="Integer" optional="true"/>
        <attribute name="recordsFiltered" mode="OUT" type="Integer" optional="true"/>
    </service>

    <service name="successMessage" engine="simple" auth="true"
             location="component://uspErp/minilang/admin/EmployeeManagementServices.xml"
             invoke="successMessage">
        <description>
            Generic Service to Render success message
        </description>
        <attribute name="errorMessageList" type="List" mode="IN" optional="true" />
        <attribute name="successMessageList" type="List" mode="IN" optional="true" />
        <attribute name="warningMessageList" type="List" mode="IN" optional="true" />
        <attribute name="uspErpSuccessMessageList" type="List" mode="OUT" optional="true" />
        <attribute name="warningMessageList" type="List" mode="OUT" optional="true" />
    </service>
    <service name="createEmployeeGroup" engine="group" auth="false">
        <description>
            Create an Employee
        </description>
        <group>
            <invoke name="createEmployee" result-to-context="true"/>
            <invoke name="successMessage" result-to-context="true"/>
        </group>
    </service>
    <service name="createEmployee" engine="simple" auth="false"
             location="component://uspErp/minilang/admin/EmployeeManagementServices.xml"
             invoke="createEmployee">
        <description>Create an Employee</description>
        <attribute name="productStoreId" type="String" mode="IN" optional="true"/>
        <attribute name="employeeLoginId" type="String" mode="IN" optional="true"/>
        <attribute name="passwd" type="String" mode="IN" optional="true"/>
        <attribute name="confirmPw" type="String" mode="IN" optional="true"/>
        <attribute name="pwHint" type="String" mode="IN" optional="true"/>
        <attribute name="isSystem" type="String" mode="IN" optional="true"/>
        <attribute name="enabled" type="String" mode="IN" optional="true"/>
        <attribute name="reqPasswdChange" type="String" mode="IN" optional="true"/>
        <attribute name="disabledDate" type="String" mode="IN" optional="true"/>
    </service>

    <service name="updateEmployeeGroup" engine="group" auth="false">
        <description>
            Update an Employee
        </description>
        <group>
            <invoke name="updateEmployee" result-to-context="true"/>
            <invoke name="successMessage" result-to-context="true"/>
        </group>
    </service>
    <service name="updateEmployee" engine="simple" auth="false"
             location="component://uspErp/minilang/admin/EmployeeManagementServices.xml"
             invoke="updateEmployee">
        <description>Update an Employee</description>
        <attribute name="productStoreId" type="String" mode="IN" optional="true"/>
        <attribute name="employeeLoginId" type="String" mode="IN" optional="true"/>
        <attribute name="passwd" type="String" mode="IN" optional="true"/>
        <attribute name="confirmPw" type="String" mode="IN" optional="true"/>
        <attribute name="pwHint" type="String" mode="IN" optional="true"/>
        <attribute name="isSystem" type="String" mode="IN" optional="true"/>
        <attribute name="enabled" type="String" mode="IN" optional="true"/>
        <attribute name="requirePasswordChange" type="String" mode="IN" optional="true"/>
        <attribute name="disabledDate" type="String" mode="IN" optional="true"/>
        <attribute name="successFailedLogins" type="String" mode="IN" optional="true"/>
    </service>

    <service name="searchEmployeeSecurityGroupList" default-entity-name="UserLoginSecurityGroup" engine="java" auth="true"
             location="services.AdminServices" invoke="searchEmployeeSecurityGroupList">
        <attribute name="employeeLoginId" mode="IN" type="String" optional="true"/>
        <attribute name="data" mode="OUT" type="java.util.List" optional="true"/>
        <attribute name="recordsTotal" mode="OUT" type="Integer" optional="true"/>
        <attribute name="recordsFiltered" mode="OUT" type="Integer" optional="true"/>
    </service>

    <service name="updateEmployeeSecurityGroupGroup" engine="group" auth="false" transaction-timeout="7200">
        <group>
            <invoke name="updateEmployeeSecurityGroup" result-to-context="true"/>
            <invoke name="successMessage" result-to-context="true"/>
        </group>
    </service>
    <service name="updateEmployeeSecurityGroup" engine="simple"
             location="component://uspErp/minilang/admin/SecurityGroupManagementServices.xml"
             invoke="updateEmployeeSecurityGroup" auth="true">
        <description>Update employee security groups</description>
        <attribute name="employeeLoginId" mode="IN" type="String" optional="false"/>
        <attribute name="groupIdMap" type="Map" string-map-prefix="groupIdMap_" mode="IN" optional="true"/>
    </service>

    <service name="searchSecurityGroupList" default-entity-name="SecurityGroup" engine="java" auth="true"
             location="services.AdminServices" invoke="searchSecurityGroupList">
        <attribute name="groupId" mode="IN" type="String" optional="true"/>
        <attribute name="data" mode="OUT" type="java.util.List" optional="true"/>
        <attribute name="recordsTotal" mode="OUT" type="Integer" optional="true"/>
        <attribute name="recordsFiltered" mode="OUT" type="Integer" optional="true"/>
    </service>
</services>